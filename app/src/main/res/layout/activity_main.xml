<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/sec1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="111dp"
            android:layout_height="99dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/radius"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="TextSizeCheck">

            <TextView
                android:id="@+id/User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cross"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="111dp"
            android:layout_height="99dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/radius"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="TextSizeCheck">

            <TextView
                android:id="@+id/bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/o"
                android:textColor="@color/circle"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/computer"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="@drawable/main_box"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:columnCount="3"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sec1"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/box1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/box1"
            android:contentDescription="@string/btn_disc"
            android:onClick="UserClick"
            android:tag="1"
            android:textColor="@color/white"
            android:textSize="40sp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/box2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/box"
            android:contentDescription="@string/btn_disc"
            android:onClick="UserClick"
            android:tag="2"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:ignore="RedundantDescriptionCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/box3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/box3"
            android:contentDescription="@string/btn_disc"
            android:onClick="UserClick"
            android:tag="3"
            android:textColor="@color/white"
            android:textSize="40sp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/box4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/box"
            android:contentDescription="@string/btn_disc"
            android:onClick="UserClick"
            android:tag="4"
            android:textColor="@color/white"
            android:textSize="40sp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/box5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/box5"
            android:contentDescription="@string/btn_disc"
            android:onClick="UserClick"
            android:tag="5"
            android:textColor="@color/white"
            android:textSize="40sp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/box6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/box"
            android:contentDescription="@string/btn_disc"
            android:onClick="UserClick"
            android:tag="6"
            android:textColor="@color/white"
            android:textSize="40sp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/box7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/box7"
            android:contentDescription="@string/btn_disc"
            android:onClick="UserClick"
            android:tag="7"
            android:textColor="@color/white"
            android:textSize="40sp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/box8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/box"
            android:contentDescription="@string/btn_disc"
            android:onClick="UserClick"
            android:tag="8"
            android:textColor="@color/white"
            android:textSize="40sp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/box9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/box9"
            android:contentDescription="@string/btn_disc"
            android:onClick="UserClick"
            android:tag="9"
            android:textColor="@color/white"
            android:textSize="40sp"

            />

    </GridLayout>

    <TextView
        android:id="@+id/Turn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:padding="25dp"
        android:text="@string/your_turn"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>